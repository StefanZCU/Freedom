@model IEnumerable<ListingViewModel>

@{
    ViewData["Title"] = "Listings";
}

<h1>Listings</h1>

@if (!Model.Any())
{
    <p>No listings yet.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Location</th>
                <th>Budget</th>
                <th>Category</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a asp-action="Details" asp-route-listingId="@item.Id">@item.Title</a>
                </td>
                <td>@item.LocationAddress</td>
                <td>@item.Budget</td>
                <td>@item.WorkerTypeCategory</td>
                <td>
                    <a asp-action="Edit" asp-route-listingId="@item.Id">Edit</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
}

<div class="mt-3">
    <a class="btn btn-primary" asp-action="Create">Create New</a>
</div>
