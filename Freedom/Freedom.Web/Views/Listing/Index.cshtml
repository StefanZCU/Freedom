@model IEnumerable<ListingServiceModel>

@{
    ViewData["Title"] = "Listings";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mb-0">Listings</h1>
        <a class="btn btn-success" asp-action="Create">
            <i class="bi bi-plus-circle me-1"></i> Create New
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center">
            <i class="bi bi-info-circle me-2"></i>No listings yet.  
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-hover align-middle shadow-sm">
                <thead class="table-light">
                    <tr>
                        <th>Title</th>
                        <th>Location</th>
                        <th>Budget</th>
                        <th>Category</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <a asp-action="Details" asp-route-listingId="@item.Id" class="fw-semibold text-decoration-none">
                                    @item.Title
                                </a>
                            </td>
                            <td>@item.LocationAddress</td>
                            <td>@item.Budget.ToString("C")</td>
                            <td>@item.WorkerTypeCategory</td>
                            <td class="text-end">
                                <a asp-action="Details" asp-route-listingId="@item.Id" class="btn btn-sm btn-outline-primary me-2">
                                    <i class="bi bi-eye"></i> View
                                </a>
                                <a asp-action="Edit" asp-route-listingId="@item.Id" class="btn btn-sm btn-outline-secondary">
                                    <i class="bi bi-pencil"></i> Edit
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>