<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <meta name="theme-color" content="#0d6efd" />
    <title>@ViewData["Title"] - Freedom</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/Freedom.Web.styles.css" asp-append-version="true"/>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
</head>
<body class="d-flex flex-column min-vh-100">
<header>
    <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom sticky-top">
        <div class="container">
            <a class="navbar-brand d-flex align-items-center gap-2" asp-area="" asp-controller="Home" asp-action="Index">
                <i class="bi bi-lightning-charge-fill text-primary"></i>
                <span class="fw-semibold">Freedom</span>
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar" aria-controls="mainNavbar"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="mainNavbar">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">
                            <i class="bi bi-house-door me-1"></i> Home
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Listing" asp-action="Index">
                            <i class="bi bi-card-checklist me-1"></i> Listings
                        </a>
                    </li>
                </ul>

                <div class="d-flex align-items-center gap-2">
                    <a class="btn btn-primary d-none d-sm-inline-flex" asp-controller="Listing" asp-action="Create">
                        <i class="bi bi-plus-lg me-1"></i> New Listing
                    </a>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </div>
    </nav>
</header>

<!-- Optional Hero section for the home page or any view that defines it -->
@await RenderSectionAsync("Hero", required: false)

<!-- Global alerts (TempData) -->
<div class="container mt-3">
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-1"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle me-1"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
</div>

<div class="container mt-4 mb-5">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="mt-auto border-top bg-light py-4">
    <div class="container d-flex flex-column flex-sm-row justify-content-between align-items-center gap-2">
        <small class="text-muted">&copy; @DateTime.Now.Year — Freedom</small>
        <ul class="nav small">
            <li class="nav-item"><a class="nav-link px-2 text-muted" asp-controller="Home" asp-action="Index">Home</a></li>
            <li class="nav-item"><a class="nav-link px-2 text-muted" asp-controller="Listing" asp-action="Index">Listings</a></li>
            <li class="nav-item"><a class="nav-link px-2 text-muted" href="#">Privacy</a></li>
            <li class="nav-item"><a class="nav-link px-2 text-muted" href="#">Contact</a></li>
        </ul>
    </div>
</footer>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>