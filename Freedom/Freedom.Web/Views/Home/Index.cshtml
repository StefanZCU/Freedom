@{
    ViewData["Title"] = "Home Page";
}

@section Hero {
    <section class="py-5 bg-light border-bottom">
        <div class="container">
            <div class="row align-items-center g-4">
                <div class="col-lg-7">
                    <h1 class="display-5 fw-bold mb-3">Hire fast. Work free. <span class="text-primary">Freedom</span>.</h1>
                    <p class="lead text-muted mb-4">
                        Post a job in seconds. Connect with vetted workers. Track everything cleanly.
                    </p>
                    <div class="d-flex gap-2">
                        <a asp-controller="Listing" asp-action="Create" class="btn btn-primary btn-lg">
                            <i class="bi bi-plus-lg me-1"></i> Create Listing
                        </a>
                        <a asp-controller="Listing" asp-action="Index" class="btn btn-outline-secondary btn-lg">
                            <i class="bi bi-card-checklist me-1"></i> Browse Listings
                        </a>
                    </div>
                </div>
                <div class="col-lg-5">
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <div class="d-flex align-items-center mb-3">
                                <i class="bi bi-shield-check fs-3 text-primary me-2"></i>
                                <h5 class="mb-0">Why Freedom</h5>
                            </div>
                            <ul class="list-unstyled mb-0">
                                <li class="mb-2"><i class="bi bi-check2-circle me-2 text-primary"></i> Owner-only edits and clean audit trail</li>
                                <li class="mb-2"><i class="bi bi-check2-circle me-2 text-primary"></i> Simple, fast CRUD (no fluff)</li>
                                <li class="mb-2"><i class="bi bi-check2-circle me-2 text-primary"></i> Built on ASP.NET Core + EF Core</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
}