@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col">
            <h2 class="fw-semibold">@ViewData["Title"]</h2>
            <p class="text-muted mb-0">
                Manage the platform, review new submissions, and keep the system in check.
            </p>
        </div>
    </div>

    <div class="row g-3">
        <div class="col-md-4">
            <div class="card shadow-sm h-100">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title mb-2">Pending Listings</h5>
                    <p class="card-text text-muted flex-grow-1">
                        Review and approve listings waiting to go live on the platform.
                    </p>
                    <a asp-area="Admin"
                       asp-controller="ListingApproval"
                       asp-action="Pending"
                       class="btn btn-primary mt-2">
                        Review pending listings
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm h-100">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title mb-2">Pending Workers</h5>
                    <p class="card-text text-muted flex-grow-1">
                        Approve and manage worker profiles
                    </p>
                    <a asp-area="Admin"
                       asp-controller="WorkerApproval"
                       asp-action="Pending"
                       class="btn btn-primary mt-2">
                        Review pending worker profiles
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm h-100">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title mb-2">Back to listings</h5>
                    <p class="card-text text-muted flex-grow-1">
                        Return to the public listings page to view the platform as a regular user.
                    </p>
                    <a asp-area=""
                       asp-controller="Listing"
                       asp-action="Index"
                       class="btn btn-outline-primary mt-2">
                        Go to listings
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>